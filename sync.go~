package main

import (
	"log"
	"os"
	"os/exec"
)

func syncDrafts() {
	bashPath, err := exec.LookPath("bash")
	if err != nil {
		log.Printf("Could not find bash: %s", err)
	}
	
	cmd := &exec.Cmd {
		Path: bashPath,
		Args: []string{ bashPath, "sync.sh" },
		Stdout: os.Stdout,
		Stderr: os.Stdout,
	}

	if err = cmd.Run(); err != nil {
		log.Printf("Error running the sync script: %s", err)
	}
}
